{
  "manifest_version": 3,
  "name": "AIGIS Violence Detection",
  "version": "1.0",
  "description": "Analyzes video content for violence during calls",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        /*"content_scripts/video_content_script.js",
        "content_scripts/audio_extraction_script.js",*/
        "content_scripts/deepfake_content_script.js",
        /*"content_scripts/content_script.js",*/
        "content_scripts/text_content_script.js",
        "content_scripts/nudity_content_script.js",
        "html2canvas.min.js"
      ],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}
