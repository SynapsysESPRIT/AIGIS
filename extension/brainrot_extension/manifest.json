{
  "manifest_version": 3,
  "name": "Brainrot Detector",
  "version": "1.0",
  "description": "Detects brainrot videos on any site.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
